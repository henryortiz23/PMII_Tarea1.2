<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tarea_1._2.MainPage">

    <ScrollView >
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            HorizontalOptions="FillAndExpand">

            <Frame Margin="0,20,0,0" Padding="0">
                <Image/>
            </Frame>

            <Frame>
                <Entry x:Name="eNames" Placeholder="Ingrese nombres"/>
            </Frame>
            <Frame>
                <Entry x:Name="eLastNames"  Placeholder="Ingrese apellidos"/>
            </Frame>
            <Frame CornerRadius="10">
                <DatePicker x:Name="eBd" Format="D"/>
            </Frame>
            <Frame>
                <Entry x:Name="eEmail"  Placeholder="Ingrese correo"/>
            </Frame>


            <Button x:Name="btnAgregar" Clicked="onAddClicked"
                Text="Agregar"/>


        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
